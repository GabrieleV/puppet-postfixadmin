user     = <%= @dbuser %>
password = <%= @dbpass %>
hosts    = <%= @hosts.join(' ') %>
dbname   = <%= @dbname %>

query    = SELECT maildir 
           FROM mailbox
             JOIN domain ON mailbox.domain = domain.domain
           WHERE username='%s'
	     AND mailbox.active = 1
	     AND domain.active  = 1


