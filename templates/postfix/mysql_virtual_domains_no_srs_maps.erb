# Spec:
# return address if this is a virtual domain
# used as a map to match local adresses before srs comes in action
# this avoids srs for local domains.

user     = <%= @dbuser %>
password = <%= @dbpass %>
hosts    = <%= @hosts.join(' ') %>
dbname   = <%= @dbname %>

query    = SELECT CONCAT('%u', '@', '%d' )
           FROM domain 
	   WHERE domain='%d' 
	   AND active = 1

