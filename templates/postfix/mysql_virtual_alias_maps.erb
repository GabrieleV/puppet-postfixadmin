password = <%= @dbpass %>
hosts    = <%= @hosts.join(' ') %>
dbname   = <%= @dbname %>

query = SELECT goto
        FROM alias
          JOIN domain ON alias.domain = domain.domain
        WHERE address='%s'
          AND alias.active  = 1
          AND domain.active = 1

